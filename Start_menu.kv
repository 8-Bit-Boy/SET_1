
<Start_menu>:
     canvas.before:
          Rectangle:
               size: self.size
               source: "SMOOTH_BLUE_BACKGROUND.jpg"
     Label:
          font_size: dp(30)
          text: root.parent.game_text
          pos_hint: {"center_x" : .5 , "center_y": .7}
     Button:
          font_size: dp(30)
          text: root.parent.button_text
          pos_hint: {"center_x" : .5 , "center_y": .5}
          size_hint: .3 , .1
          background_normal: ''
          background_color: .1 , .1 , .5 , .80
          on_press : root.parent.on_button_press()
     Label:
          text: "Made      by      Gracy      Tereze"
          pos_hint: {"center_x" : .5 , "center_y": .3}